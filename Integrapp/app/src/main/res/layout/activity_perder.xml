<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondonubesv"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ganaste"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/intentaotravez" />
    <ImageView
        android:id="@+id/ojosabiertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/ganaste"
        android:src="@drawable/perdioojosabiertos"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/ojoscerrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ganaste"
        android:src="@drawable/perdioojoscerrados"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

</LinearLayout>
