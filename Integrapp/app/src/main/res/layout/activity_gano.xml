<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondonubesv"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ganaste"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/ganaste"
        android:layout_marginLeft="75dp"/>

    <ImageView
        android:id="@+id/nenefestejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:src="@drawable/nenefestejo"
        android:layout_below="@+id/ganaste"
        />

    <ImageView
        android:id="@+id/nenebrazosextendidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/nenebrazosextendidos"
        android:layout_below="@+id/ganaste"
        />
</LinearLayout>
